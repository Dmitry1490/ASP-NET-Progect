                    <thead>
                        <tr>
                            <th data-field="id">ID</th>
                            <th data-field="productName">Product Name</th>
                            <th data-field="NameCategory">Category</th>
                            <th data-field="NameCountry">Country</th>
                            <th data-field="NameQualification">Qualification</th>
                            <th data-field="NameManufacturer">Manufacturer</th>
                            <th data-field="TySmd">Datasheet</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model.Product)
                            {
                                <tr ng-repeat="item in items">

                                    <td><span class="pd-id">@Html.DisplayFor(modelItem => item.IdProduct)</span></td>
                                    <td><span class='pd-name'>@Html.DisplayFor(modelItem => item.NameProduct)</span> </td>
                                    <td>@Html.DisplayFor(modelItem => item.IdCategoryNavigation.NameCategory)</td>
                                    <td>@Html.DisplayFor(modelItem => item.IdCountryNavigation.NameCountry)</td>
                                    <td>@Html.DisplayFor(modelItem => item.IdQualificationNavigation.NameQualification)</td>
                                    <td>@Html.DisplayFor(modelItem => item.IdManufacturerNavigation.NameManufacturer)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TySmd)</td>
                                    <td>
                                        @if (User.Identity.IsAuthenticated)
                                        {

                                            <select data-pdid="@Html.DisplayFor(modelItem => item.IdProduct)" class="form-control IdProject form-control-sm">
                                                @for (int i = 0; i < Model.Projects.Count; i++)
                                                {
                                                    <option value=@Model.Projects[i].IdProjects selected>@Model.Projects[i].NameProject</option>
                                                }
                                            </select>
                                            <button id="btnSelect" ng-click="addItem(item)" class="btn btn-outline-primary">
                                                Add to project
                                                <i class="fa fa-rocket" aria-hidden="true"></i>
                                            </button>

                                        }
                                        else
                                        {
                                            <select class="form-control" form-control-sm">
                                                <option value="0" selected>No project</option>
                                            </select>
                                            <button ng-click="addItem(item)" class="btn btn-light">
                                                Add to project
                                                <i class="fa fa-rocket" aria-hidden="true"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            } }
                    </tbody>
                </table>

                <script>$(document).ready(function () {
                        $("#myTable").on('click', 'tr', function (event) {
                            if (event.target.id == 'btnSelect') {
                                var select = $(this).find('.IdProject')[0];
                                var col2 = $(this).find(".pd-name").html();
                                var model = {
                                    ProductId: $(select).data('pdid'),
                                    IdProjects: $(select).val()
                                }

                                $.ajax({
                                    type: "POST",
                                    data: JSON.stringify(model),
                                    contentType: "application/json; charset=utf-8",
                                    dataType: "json",
                                    url: "/Search/AddProductToProject",
                                    success: function () {
                                        swal(col2, 'Added successfully', "success")
                                    },
                                    failure: function () {
                                        swal('Error!', 'Added error', "error")
                                    }
                                });
                            }
